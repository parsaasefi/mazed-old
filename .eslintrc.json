{
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "no-console": "off",
    "no-plusplus": "off",
    "no-restricted-syntax": "off"
  },
  "overrides": [
    {
      "files": ["*.test.js"],
      "rules": {
        "no-undef": "off"
      }
    },
    {
      "files": ["secure.js"],
      "rules": {
        "no-shadow": "off"
      }
    },
    {
      "files": ["extension/**/*"],
      "rules": {
        "no-undef": "off"
      }
    }
  ]
}
